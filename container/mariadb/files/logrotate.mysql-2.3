/var/log/mysql/mysql.err /var/log/mysql/mysql.log /var/log/mysql/mysqld.err /var/log/mysql/mysqld.log {
	su mysql mysql
	weekly
	create 660 mysql mysql
	notifempty
	size 5M
	missingok
	sharedscripts
	postrotate
		pidfile="$( my_print_defaults server mysqld mariadb | grep 'pid[_-]file' | tail -n 1 | cut -d = -f 2 )"
		if [ -s "${pidfile}" ] ; then
			/bin/kill -HUP "$( cat "${pidfile}" )"
		fi
	endscript
}

